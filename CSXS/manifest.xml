<?xml version="1.0" encoding="UTF-8"?>
<ExtensionManifest
	Version="5.0"
	ExtensionBundleId="com.extension.apptek.dubbing"
	ExtensionBundleVersion="1.0.0"
	ExtensionBundleName="Apptek Dubbing Studio"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

	<ExtensionList>
		<Extension Id="com.extension.apptek.dubbing" Version="1.0" />
	</ExtensionList>

	<ExecutionEnvironment>
		<HostList>
			<Host Name="AEFT" Version="12.0" />
			<Host Name="PPRO" Version="[9.0,99.0]"/>
		</HostList>

	<LocaleList>
		<Locale Code="All" />
	</LocaleList>

	<RequiredRuntimeList>
		<RequiredRuntime Name="CSXS" Version="9.0" />
	</RequiredRuntimeList>
</ExecutionEnvironment>

	<DispatchInfoList>
		<Extension Id="com.extension.apptek.dubbing">
			<DispatchInfo>

			<Resources>
				<MainPath>./index.html</MainPath>
				<ScriptPath>./jsx/core.jsx</ScriptPath>
				<CEFCommandLine>
	   			<Parameter>--enable-nodejs</Parameter>
				<Parameter>--mixed-context</Parameter>
				<Parameter>--allow-file-access</Parameter>
				<Parameter>--allow-file-access-from-files</Parameter>
	 			</CEFCommandLine>
			</Resources>

			<Lifecycle>
				<AutoVisible>true</AutoVisible>
			</Lifecycle>

			<UI>

				<Type>Panel</Type>
				<Menu>Apptek Dubbing Studio</Menu>

				<Geometry>
					<Size>
						<Height>1024</Height>
						<Width>1200</Width>
					</Size>
				
					
				</Geometry>

			</UI>
		</DispatchInfo>
	</Extension>
</DispatchInfoList>
</ExtensionManifest>
